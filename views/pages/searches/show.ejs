<!DOCTYPE html>
<html>
    <head>
        <%- include('../../layout/head.ejs') %>
    </head>

    <body>
            <header>
                <%- include('../../layout/header') %>
            </header>

            <main>
                <h2>Search Results</h2>
        
            <% searchResults.forEach( (bookObj)=> { %>
                <section>
                    <img src=<%= bookObj.image_url %> />
                    <h2><%= bookObj.title %></h2>
                    <p><%= bookObj.author %></p>
                    <p><%= bookObj.description %></p>
                </section>
            <% }); %>
            </main>

    </body>

    <footer>
        <%- include('../../layout/footer.ejs') %>
    </footer>
</html>