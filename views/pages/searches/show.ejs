<!DOCTYPE html>
<html>
    <head>
        <%- include('../../layout/head.ejs') %>
    </head>

    <body>
            <header>
                <%- include('../../layout/header') %>
            </header>

            <main>
                <h2>Search Results</h2>

                <% searchResults.forEach( (bookObj)=> { %>
                    <section>
                        <img src=<%= bookObj.image_url %> />
                        <h2><%= bookObj.title %></h2>
                        <p><%= bookObj.author %></p>
                        <p><%= bookObj.description %></p>
                                                
                        <button class="selectBook" >Select this book</button>
                        <!-- sourced from to-do app //textarea may need attention-->
                        <form class="bookDetails" id="edit-detils" action="/books" method="post"> 
                            <fieldset>
                              <legend>Edit Book Details</legend>
                              <label for="title">Title:</label>
                              <input type="text" name="title" placeholder="<%= bookObj.title %>">
                              <label for="author">Author:</label>
                              <input type="text" name="author" placeholder="<%= bookObj.author %>">
                              <label for="description">Description:</label>
                              <textarea name="description" placeholder="<%= bookObj.description %>" cols="30" rows="10"></textarea>
                              <br>   <!--remove later with css applying to form-->
                              <label for="bookshelf">Bookshelf:</label>
                              <input type="text" name="bookshelf" placeholder="<%=bookObj.bookshelf%>" required>
                              <label for="isbn">ISBN:</label>
                              <input type="text" name="isbn" placeholder="<%= bookObj.isbn %>">
                              <button type="submit">Save </button>
                            </fieldset>
                          </form>


                    </section>

                <% }); %>

            </main>

    </body>

    <footer>
        <%- include('../../layout/footer.ejs') %>
    </footer>
</html>