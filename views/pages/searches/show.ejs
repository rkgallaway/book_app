<!DOCTYPE html>
<html>
    <head>
        <%- include('../../layout/head.ejs') %>
    </head>

    <body>
            <header>
                <%- include('../../layout/header') %>
            </header>

            <main>
                <h2>Search Results</h2>
        
            <% searchResults.forEach( (bookObj)=> { %>
                <section>
                    <img src=<%= bookObj.image_url %> />
                    <h2><%= bookObj.title %></h2>
                    <p><%= bookObj.author %></p>
                    <p><%= bookObj.description %></p>
                    <!-- show details:  addition below is a start to reveal the details partial -->
                    <form action="/details" method="post">
                        <button type="submit">More Details</button>
                    </form>
                    <p><%= bookObj.isbn %></p>
                    <p><%= bookObj.bookshelf %></p>
                </section>
            <% }); %>
               


            </main>

    </body>

    <footer>
        <%- include('../../layout/footer.ejs') %>
    </footer>
</html>